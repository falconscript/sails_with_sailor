<script>
document.title = "Sign in";
var bgs = [
	"/img/loginbg1.jpg",
	"/img/loginbg2.jpg",
	"/img/loginbg3.jpg",
	"/img/loginbg4.jpg"
];

$(document).ready(function() {
	$("#loginBackground").attr("src", bgs[Math.floor(Math.random()*bgs.length)]);
	$('.form-username').focus();
	$("#ReferTo").val(document.referrer);

	// render
	if (!env.username || env.isfake) {
		$("#signInDiv").show();
		$("#alreadyLoggedIn").hide();
	} else {
		$("#alreadyLoggedIn").show();
		$("#signInDiv").hide();
	}
});
</script>


